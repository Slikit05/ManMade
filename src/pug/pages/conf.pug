doctype html
html(lang="ru-Ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title ManMade
    
    include includes/link.pug
    
  body.body-bg(style="background-image: url(img/conf-bg.png)")
    header.wrapper-violet-color.wrapper-color.wrapper-color--violet-before
      .container-big
        include includes/header.pug
        .wrapper-bg

          include includes/header-down.pug

          section.bread-crumbs
            .container
              .bread-crumbs__wrapper
                ul.bread-crumbs__list
                  li.bread-crumbs__item(data-page-link="2")
                    a.bread-crumbs__link(href="#") Главная
                  li.bread-crumbs__item(data-page-link="1")
                    span.bread-crumbs__link.bread-crumbs__link--active BASE

          
                  
      include includes/line-form.pug
              
              
    main.wrapper-violet-color
      section.two-column
        .container
          .two-column__wrapper
            .content
              .configurate
                h2.configurate__title Собери свой EPIC
                
                .configurate-block
                  .configurate-block__up
                    img.configurate-block__icon(src="img/cpu.svg")
                    h4.configurate-block__caption Процессор
                    include includes/hint.pug
                        
                  .configurate-block__down
                    .configurate-block__grid
                    
                      .configurate-item
                        span Intel Core i5-9600K
                      .configurate-item
                        span Intel Core i9-9700
                      .configurate-item
                        span Intel Core i9-9900K
                      .configurate-item
                        span Intel Xeon MP
                        
                .configurate-block
                  .configurate-block__up
                    img.configurate-block__icon(src="img/gpu.svg")
                    h4.configurate-block__caption Видеокарта
                    include includes/hint.pug
                        
                  .configurate-block__down
                    .configurate-block__grid
                    
                      .configurate-item
                        span 6 Gb GeForce RTX 2060 S
                      .configurate-item
                        span 11 Gb GeForce RTX 2070 S
                      .configurate-item
                        span ASUS 11 Gb GeForce RTX 2080 Super
                      .configurate-item
                        span 6 Gb GeForce 1060
