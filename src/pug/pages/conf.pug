                        .configurate-contre__block  
                          .configurate-contre__plus +
                          
                .configurate-block
                  .configurate-block__up
                    img.configurate-block__icon(src="img/hdd.svg")
                    h4.configurate-block__caption Накопители
                    include includes/hint.pug
                        
                  .configurate-block__down
                    .configurate-block__row
                    
                      .configurate-item
                        span 250 Gb SSD
                        
                      .configurate-contre
                        .configurate-contre__block
                          .configurate-contre__minus &mdash;
                          
                        .configurate-contre__value
                          input.configurate-contre__number(type="text" value="0")
                          span.configurate-contre__text шт.
                          
                        .configurate-contre__block  
                          .configurate-contre__plus +
                          
                    .configurate-block__row
                    
                      .configurate-item
                        span 2 Tb HDD
                        
                      .configurate-contre
                        .configurate-contre__block
                          .configurate-contre__minus &mdash;
                          
                        .configurate-contre__value
                          input.configurate-contre__number(type="text" value="0")
