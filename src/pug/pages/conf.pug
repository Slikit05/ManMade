                    include includes/hint.pug
                        
                  .configurate-block__down
                    .configurate-block__grid
                    
                      .configurate-item
                        span Воздушное
                      .configurate-item
                        span Водяное
                          
                .configurate-block
                  .configurate-block__up
                    img.configurate-block__icon(src="img/case.svg")
                    h4.configurate-block__caption Корпус
                    include includes/hint.pug
                        
                  .configurate-block__down
                    .corps
                      .corps__wrapper
                      
                        label.corps-block
